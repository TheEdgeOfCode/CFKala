<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="60.0" prefWidth="757.0" style="-fx-background-color: #bdc3c7;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.codefathers.cfkclient.controllers.ProductRowForSM">
   <children>
      <HBox alignment="CENTER_LEFT" prefWidth="758.0" spacing="15.0">
         <children>
            <ImageView fx:id="image" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER" />
            <Label fx:id="name" text="Product Name">
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <Separator orientation="VERTICAL" prefWidth="0.0" />
            <Label text="ID : ">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <Label fx:id="id" prefHeight="18.0" prefWidth="138.0">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <JFXButton fx:id="showBut" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" text=" ">
               <graphic>
                  <FontIcon iconLiteral="fa-external-link" iconSize="15" />
               </graphic>
            </JFXButton>
            <JFXButton fx:id="editButt" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" layoutX="727.0" layoutY="33.0" text=" ">
               <graphic>
                  <FontIcon iconLiteral="fa-edit" iconSize="15" />
               </graphic>
            </JFXButton>
            <JFXButton fx:id="delete" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" layoutX="727.0" layoutY="33.0" text=" ">
               <graphic>
                  <FontIcon iconLiteral="fa-trash-o" iconSize="15" />
               </graphic>
            </JFXButton>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
