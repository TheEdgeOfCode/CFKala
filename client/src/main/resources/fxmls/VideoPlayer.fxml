<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.media.MediaView?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<BorderPane prefHeight="438.0" prefWidth="396.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codefathers.cfkclient.controllers.VideoPlayer">
    <center>
        <MediaView fx:id="player" fitHeight="400.0" fitWidth="600.0" BorderPane.alignment="CENTER"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="37.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
            <children>
                <JFXButton fx:id="play" contentDisplay="GRAPHIC_ONLY" prefHeight="10.0" prefWidth="14.0">
                    <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fa-play" iconSize="25"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="pause" contentDisplay="GRAPHIC_ONLY" prefHeight="10.0" prefWidth="14.0">
                    <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fa-pause" iconSize="25"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="close" contentDisplay="GRAPHIC_ONLY" prefHeight="10.0" prefWidth="14.0">
                    <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fa-close" iconSize="25"/>
                    </graphic>
                </JFXButton>
            </children>
        </HBox>
    </bottom>
</BorderPane>
