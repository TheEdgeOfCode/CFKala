<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="920.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codefathers.cfkclient.controllers.Advertise">
    <children>
        <FontIcon iconLiteral="fa-podcast" iconSize="50" layoutX="14.0" layoutY="57.0"/>
        <Label layoutX="20.0" layoutY="64.0" text="Ads">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" layoutX="89.0" layoutY="14.0" prefWidth="742.0" spacing="30.0">
            <children>
                <ImageView fx:id="image" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true"/>
                <VBox alignment="CENTER_LEFT" prefHeight="370.0">
                    <children>
                        <Label fx:id="name" text="Product Name">
                            <font>
                                <Font name="Lemon Regular" size="34.0"/>
                            </font>
                        </Label>
                        <Label fx:id="seller" text="Seller">
                            <font>
                                <Font name="System Bold" size="28.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
    <cursor>
        <Cursor fx:constant="HAND"/>
    </cursor>
</AnchorPane>
